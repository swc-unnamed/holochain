enum AppRole {
  PATRON
  AUCTIONEER
  DEVELOPER
  TZAR

  @@map("app_roles")
}

enum OrganizationRole {
  PATRON
  MEMBER
  MODERATOR
  ADMINISTRATOR
  OWNER

  @@map("organization_roles")
}

enum UserPreferenceKey {
  GLOBAL_THEME_MODE
  GLOBAL_ENABLE_NOTIFICATIONS
  GLOBAL_ANONYMOUS_MODE

  @@map("user_preference_keys")
}

enum SiteConfigurationKey {
  COMBINE_CLIENT_ID
  COMBINE_CLIENT_SECRET
  GLOBAL_REQUIRE_COMBINE_AUTHENTICATION // Deprecated
  GLOBAL_DISABLE_NAME_VERIFICATION // Deprecated
  DISCORD_CLIENT_ID
  DISCORD_CLIENT_SECRET

  // Integration tokens, not to be confused with user tokens
  // these are used by the backend to interact with the Unnamed Market Faction
  // within the Combine. They should be kept secret. For obvious reasons.
  // Additionally, these will ever only be able to be done with the UM faction
  // so we don't accidentally use them for other factions.
  INTEGRATION_COMBINE_ACCESS_TOKEN
  INTEGRATION_COMBINE_REFRESH_TOKEN
  INTEGRATION_COMBINE_TOKEN_EXPIRES_AT
  INTEGRATION_COMBINE_SCOPES

  @@map("site_configuration_keys")
}

enum EntityTransactionType {
  MARKETPLACE_PURCHASE
  AUCTION_BID
  DONATION

  @@map("entity_transaction_types")
}

enum LotStatus {
  SUBMITTED
  SCHEDULED
  SOLD
  COMPLETED
  WITHDRAWN

  @@map("lot_status")
}

enum AuctionStatus {
  ACTIVE
  CANCELLED
  COMPLETED
  PENDING

  @@map("auction_status")
}

enum AuctionConfigurationKey {
  LIVE_DISCORD_BROADCAST_WEBHOOK_URL

  @@map("auction_configuration_key")
}
